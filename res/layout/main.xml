<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_main" >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_x="3dp"
        android:layout_y="13dp"
        android:scaleType="fitXY"
        android:src="@drawable/logo" />

    <Button
        android:id="@+id/buttonBata"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:text="Hitung Bata"/>

    <Button
        android:id="@+id/ButtonClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="X" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ButtonClose"
        android:layout_toRightOf="@+id/imageView2"
        android:text="Hitung Anggaran Rumah Jadi Mudah"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ButtonClose"
        android:layout_alignLeft="@+id/textView2"
        android:text="Kalkulator Bangunan"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <Button
        android:id="@+id/buttonPlavon"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonBata"
        android:layout_below="@+id/buttonBata"
        android:layout_marginTop="23dp"
        android:text="Hitung Plavon" />

    <Button
        android:id="@+id/buttonGenteng"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonPlavon"
        android:layout_below="@+id/buttonPlavon"
        android:layout_marginTop="23dp"
        android:text="Hitung Genteng" />

    <Button
        android:id="@+id/buttonUbin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonGenteng"
        android:layout_below="@+id/buttonGenteng"
        android:layout_marginTop="21dp"
        android:text="Hitung Ubin" />

    <Button
        android:id="@+id/buttonSemua"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonUbin"
        android:layout_below="@+id/buttonUbin"
        android:layout_marginTop="22dp"
        android:text="Hitung Semua" />

</RelativeLayout>